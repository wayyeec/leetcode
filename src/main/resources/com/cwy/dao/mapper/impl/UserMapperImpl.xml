<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cwy.dao.mapper.impl.UserMapperImpl">
    <resultMap id="userMap" type="com.cwy.dao.model.UserDao">
        <id property="id" column="id"/>
        <result property="phone" column="phone"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="gender" column="gender"/>
        <result property="trueName" column="trueName"/>
        <result property="birthday" column="birthday"/>
        <result property="age" column="age"/>
        <result property="mail" column="mail"/>
        <result property="recentlyLanded" column="recentlyLanded"/>
        <collection property="roles" ofType="com.cwy.dao.model.Role">
            <result  property="name" column="name"/>
        </collection>
    </resultMap>

    <select id="findByPhone" parameterType="String" resultMap="userMap">
        select u.*,r.name
        from user u
        LEFT JOIN user_role sru on u.id= sru.User_id
        LEFT JOIN role r on sru.Role_id=r.id
        where phone= #{phone}
    </select>

    <resultMap id="BaseResultMap" type="com.cwy.dao.model.UserDao">
        <constructor>
            <idArg column="id" javaType="java.lang.Integer" jdbcType="INTEGER" />
            <arg column="phone" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="username" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="password" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="gender" javaType="java.lang.String" jdbcType="CHAR" />
            <arg column="trueName" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="birthday" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="email" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="personalBrief" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="recentlyLanded" javaType="java.lang.String" jdbcType="VARCHAR" />
        </constructor>
    </resultMap>
    <resultMap id="ResultMapWithBLOBs" type="com.cwy.dao.po.User">
        <constructor>
            <idArg column="id" javaType="java.lang.Integer" jdbcType="INTEGER" />
            <arg column="phone" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="username" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="password" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="gender" javaType="java.lang.String" jdbcType="CHAR" />
            <arg column="trueName" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="birthday" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="email" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="personalBrief" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="recentlyLanded" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="avatarImgUrl" javaType="java.lang.String" jdbcType="LONGVARCHAR" />
        </constructor>
    </resultMap>
    <sql id="Base_Column_List">
    id, phone, username, password, gender, trueName, birthday, email, personalBrief,
    recentlyLanded
  </sql>
    <sql id="Blob_Column_List">
    avatarImgUrl
  </sql>
    <select id="selectUserByParam" parameterType="java.lang.Integer" resultMap="ResultMapWithBLOBs">
        select
        <include refid="Base_Column_List" />
        ,
        <include refid="Blob_Column_List" />
        from user
        where 1=1
        <if test="phone != null">
            and phone = #{phone,jdbcType=VARCHAR}
        </if>
        <if test="username != null">
            and username = #{username,jdbcType=VARCHAR}
        </if>
        <if test="password != null">
            and password = #{password,jdbcType=VARCHAR}
        </if>
        <if test="gender != null">
            and gender = #{gender,jdbcType=CHAR}
        </if>
        <if test="truename != null">
            and trueName = #{truename,jdbcType=VARCHAR}
        </if>
        <if test="birthday != null">
            and birthday = #{birthday,jdbcType=VARCHAR}
        </if>
        <if test="email != null">
            and email = #{email,jdbcType=VARCHAR}
        </if>
        <if test="personalbrief != null">
            and personalBrief = #{personalbrief,jdbcType=VARCHAR}
        </if>
        <if test="recentlylanded != null">
            and recentlyLanded = #{recentlylanded,jdbcType=VARCHAR}
        </if>
        <if test="avatarimgurl != null">
            and avatarImgUrl = #{avatarimgurl,jdbcType=LONGVARCHAR}
        </if>
    </select>


</mapper>
